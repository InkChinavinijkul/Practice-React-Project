{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es2020",
        "downlevelIteration": true, 
        "outDir": "dist",    
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true, 
        "types": ["jest","node"]
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.js",
        "./models/**/*.ts",
        "./models/**/*.js",
        "./config/**/*.js"
    ]

}